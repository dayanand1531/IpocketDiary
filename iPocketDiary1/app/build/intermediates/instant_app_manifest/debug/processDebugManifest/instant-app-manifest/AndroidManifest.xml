<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softwaredepotonline.iPocketDiary"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.aPocketDiary"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.Help"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.LoginView"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.Authentication"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.HelpPassword"
            android:clearTaskOnLaunch="true"
            android:label="Password Help"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.ChangePasswordView"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.ItemList"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.SubItemList"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.FolderEditor"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.SubFolderEditor"
            android:clearTaskOnLaunch="true"
            android:label="Create Subfolder"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.Information"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.AddNewItem"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softwaredepotonline.iPocketDiary.AddCustomItem"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>